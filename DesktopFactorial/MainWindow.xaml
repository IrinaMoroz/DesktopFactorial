<Window x:Class="DesktopFactorial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="600">
    <Grid>
        <TextBox x:Name="tbValue" 
                 Margin="10,10,122,425"
                 MaxLength="10"/>
        <TextBox x:Name="tbMonitor" 
                 Margin="10,98,10,10"
                 FontFamily="Latha"
                 FontStyle="Oblique"
                 FontSize="14"
                 IsReadOnly="True"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                 ScrollViewer.HorizontalScrollBarVisibility="Visible"
                 >Hello! Put the number!!</TextBox>
        <Button
            x:Name="btCalc"
            Margin="475,10,10,425"
            BorderBrush="Black" BorderThickness="1" 
            Click="button_ClickCalc" ClickMode="Press">Calc</Button>

        <ProgressBar x:Name="pbStatus" Margin="10,50,10,391" />


    </Grid>
</Window>
